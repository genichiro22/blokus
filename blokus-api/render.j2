            ctx.fillText({{ i }}, {{ 24 + 20*i }}, 16);
{% endfor %}
{% for i in range(4) %}
{% for j in range(4) %}
            ctx.strokeStyle = "#AAA";
            ctx.strokeRect({{ 20+100*i }}, {{ 20+100*j }},100,100);
{% endfor %}
{% endfor %}
        });
    </script>

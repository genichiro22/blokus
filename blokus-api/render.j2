{% elif c.value == 4 %}
            ctx.fillStyle = "yellow"
{% endif %}
            ctx.fillRect({{ 20*(1+c.x) }}, {{ 20*(1+c.y) }}, 20, 20);
            ctx.strokeStyle = "#DDD";
            ctx.lineWidth = 1;
            ctx.strokeRect({{ 20*(c.x + 1) }}, {{ 20*(c.y + 1) }}, 20, 20);
{% endfor %}
            ctx.fillStyle = "black";
{% for i in range(20) %}
